<h1>Login</h1>

<%= form_tag '/login' do %>
  <div class="form-group">
  Email: <%= text_field_tag :email, nil, class:"form-control" %>
  </div>
  <div class="form-group">
  Password: <%= password_field_tag :password, nil, class:"form-control" %>
  </div>
  <%= submit_tag "Login", class:"btn btn-primary mt-2" %>
<% end %>